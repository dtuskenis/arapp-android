<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/renderable_controls"
                android:textSize="@dimen/text_size_title"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/renderable_controls_scale"
                android:textSize="@dimen/text_size_content"
                />

            <SeekBar
                android:id="@+id/scale_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/seek_bar_padding_start_end"
                android:paddingEnd="@dimen/seek_bar_padding_start_end"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/renderable_controls_color"
                android:textSize="@dimen/text_size_content"
                />

            <com.rtugeek.android.colorseekbar.ColorSeekBar
                android:id="@+id/color_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:colorSeeds="@array/renderable_tint_colors"
                app:thumbHeight="@dimen/color_seek_bar_thumb_height"
                app:barHeight="@dimen/color_seek_bar_height"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>